# GAPI Environment Variables
# Copy this file to .env and fill in your values
# Environment variables override config.json values

# Steam API credentials (required)
STEAM_API_KEY=your_steam_api_key_here
STEAM_ID=your_steam_id_here

# Application secret key (required for production)
SECRET_KEY=change-me-to-a-random-secret-string

# Database connection (PostgreSQL)
DATABASE_URL=postgresql://gapi:gapi_password@localhost:5432/gapi_db

# ─── Docker Compose database credentials ──────────────────────────────────
POSTGRES_USER=gapi
POSTGRES_PASSWORD=change-me-to-a-strong-password
POSTGRES_DB=gapi

# Discord bot token (optional - for Discord integration)
#DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord Rich Presence (optional - shows currently picked game in your Discord status)
# Create an application at https://discord.com/developers/applications to get a Client ID
#DISCORD_CLIENT_ID=your_discord_application_client_id_here

# ─── Epic Games OAuth (optional) ──────────────────────────────────────────
#EPIC_CLIENT_ID=your_epic_client_id_here
#EPIC_CLIENT_SECRET=your_epic_client_secret_here

# ─── GOG Galaxy OAuth (optional) ──────────────────────────────────────────
#GOG_CLIENT_ID=your_gog_client_id_here
#GOG_CLIENT_SECRET=your_gog_client_secret_here

# ─── Xbox Game Pass OAuth (optional) ──────────────────────────────────────
#XBOX_CLIENT_ID=your_azure_ad_client_id_here
#XBOX_CLIENT_SECRET=your_azure_ad_client_secret_here

# ─── PlayStation Network (optional) ───────────────────────────────────────
# Obtain npsso from the `npsso` cookie at https://my.playstation.com after login
#PSN_NPSSO=your_npsso_token_here

# ─── Nintendo eShop (optional) ────────────────────────────────────────────
#NINTENDO_REGION=US

# ─── Notification webhooks (optional) ─────────────────────────────────────
#SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
#TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...
#IFTTT_WEBHOOK_KEY=your_ifttt_webhook_key_here
#HOMEASSISTANT_URL=http://homeassistant.local:8123
#HOMEASSISTANT_TOKEN=your_long_lived_access_token_here

# Flask environment
FLASK_ENV=production
