# GAPI Environment Variables
# Copy this file to .env and fill in your values
# Environment variables override config.json values

# Steam API credentials (required)
STEAM_API_KEY=your_steam_api_key_here
STEAM_ID=your_steam_id_here

# Database connection (PostgreSQL)
DATABASE_URL=postgresql://gapi:gapi_password@localhost:5432/gapi_db

# Discord bot token (optional - for Discord integration)
#DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Epic Games account ID (optional)
#EPIC_ID=your_epic_id_here

# GOG account ID (optional)
#GOG_ID=your_gog_id_here
